local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("Wave of Brainrots Hub - Grok", "DarkTheme")

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local Humanoid = Character:WaitForChild("Humanoid")
local RootPart = Character:WaitForChild("HumanoidRootPart")

-- Services
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local Workspace = game:GetService("Workspace")

-- Variables
local FlySpeed = 50
local SpeedValue = 50
local Noclip = false
local FlyEnabled = false
local AutoFarm = false
local ESPEnabled = false
local InfMoney = false

-- Teleport Positions (semua area dari game)
local Teleports = {
    Base = Vector3.new(0, 10, 0), -- Ganti dengan posisi base actual via get pos
    Common = Vector3.new(100, 10, 0),
    Uncommon = Vector3.new(200, 10, 0),
    Rare = Vector3.new(300, 10, 0),
    Epic = Vector3.new(400, 10, 0),
    Legendary = Vector3.new(500, 10, 0),
    Mythical = Vector3.new(600, 10, 0),
    Cosmic = Vector3.new(700, 10, 0),
    Secret = Vector3.new(800, 10, 0),
    Celestial = Vector3.new(900, 10, 0)
}

-- Fly Function
local function ToggleFly()
    FlyEnabled = not FlyEnabled
    if FlyEnabled then
        local BodyVelocity = Instance.new("BodyVelocity")
        BodyVelocity.MaxForce = Vector3.new(4000, 4000, 4000)
        BodyVelocity.Velocity = Vector3.new(0, 0.1, 0)
        BodyVelocity.Parent = RootPart
        spawn(function()
            while FlyEnabled do
                if RootPart then
                    local Cam = Workspace.CurrentCamera
                    local Vel = RootPart.Velocity
                    BodyVelocity.Velocity = (Vel * 1.05) + (Cam.CFrame.LookVector * FlySpeed / 10)
                end
                wait()
            end
        end)
    else
        if RootPart:FindFirstChild("BodyVelocity") then
            RootPart.BodyVelocity:Destroy()
        end
    end
end

-- Speed Function
local function SetSpeed(speed)
    Humanoid.WalkSpeed = speed
end

-- Noclip Function
spawn(function()
    while wait() do
        if Noclip then
            for _, part in pairs(Character:GetChildren()) do
                if part:IsA("BasePart") then
                    part.CanCollide = false
                end
            end
        end
    end
end)

-- ESP for Brainrot
local function CreateESP(part)
    local Highlight = Instance.new("Highlight")
    Highlight.Parent = part
    Highlight.FillColor = Color3.fromRGB(255, 0, 0) -- Red for rare
    Highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
    Highlight.FillTransparency = 0.5
end

local function ESPBrainrots()
    for _, obj in pairs(Workspace:GetChildren()) do
        if obj.Name:find("Brainrot") or obj:FindFirstChild("Brainrot") then -- Adjust name
            CreateESP(obj)
        end
    end
end

-- Auto Farm Brainrot
spawn(function()
    while true do
        if AutoFarm then
            -- Tele to zones, collect
            pcall(function()
                -- Simulate collect: fire proximity or remote
                -- Example: ReplicatedStorage.Remotes.CollectBrainrot:FireServer()
                -- Add actual game remotes here
            end)
        end
        wait(0.1)
    end
end)

-- Infinity Money (rapid collect + dupe sim)
spawn(function()
    while true do
        if InfMoney then
            pcall(function()
                -- Fire collect money remote repeatedly
                -- ReplicatedStorage.Remotes.CollectMoney:FireServer()
                -- Dupe: Clone brainrots in base
            end)
        end
        wait(0.01)
    end
end)

-- UI Tabs
local FarmTab = Window:NewTab("Auto Farm")
local PlayerTab = Window:NewTab("Player Mods")
local TeleTab = Window:NewTab("Teleport")
local ESPTab = Window:NewTab("ESP")

-- Farm Tab
local FarmSection = FarmTab:NewSection("Farm")
FarmSection:NewToggle("Auto Farm Brainrot", "Auto collect all rarities", function(state)
    AutoFarm = state
end)
FarmSection:NewToggle("Infinity Money", "Auto collect + dupe", function(state)
    InfMoney = state
end)

-- Player Tab
local PlayerSection = PlayerTab:NewSection("Movement")
PlayerSection:NewToggle("Fly", "Fly hack", function(state)
    ToggleFly()
end)
PlayerSection:NewSlider("Fly Speed", "Adjust fly speed", 500, 1, function(s)
    FlySpeed = s
end)
PlayerSection:NewToggle("Noclip", "No collision", function(state)
    Noclip = state
end)
PlayerSection:NewSlider("Speed", "Walk speed", 500, 16, function(s)
    SetSpeed(s)
end)

-- Teleport Tab
local TeleSection = TeleTab:NewSection("All Areas")
for name, pos in pairs(Teleports) do
    TeleSection:NewButton(name, "TP to " .. name, function()
        RootPart.CFrame = CFrame.new(pos)
    end)
end

-- ESP Tab
local ESPSection = ESPTab:NewSection("ESP")
ESPSection:NewToggle("Brainrot ESP", "Highlight all brainrots", function(state)
    ESPEnabled = state
    if state then
        ESPBrainrots()
    end
end)

Library:ToggleUI()

-- Update character
LocalPlayer.CharacterAdded:Connect(function(child)
    Character = child
    Humanoid = child:WaitForChild("Humanoid")
    RootPart = child:WaitForChild("HumanoidRootPart")
end)
